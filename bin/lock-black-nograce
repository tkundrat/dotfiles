#!/bin/bash

# disabled options
#    --no-unlock-indicator \
#    -c 000000 \

swaylock \
    --image ~/Pictures/lockscreen-bg.png \
    --daemonize \
    --clock \
    --indicator-idle-visible \
    --grace 0 \
    --effect-blur 13x8 \
    --effect-vignette 0.5:0.5 \
    --effect-scale 1 \
    --timestr "%H:%M" \
    --datestr "%a %d.%m.%Y" \
    --ring-color 3d484d \
    --key-hl-color a7c080 \
    --line-color 3d484d \
    --inside-color 4f585e \
    --separator-color a7c080
